<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1A1A1A"
    tools:context=".CreateAlarm">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Spinner
            android:id="@+id/spinner"
            android:layout_width="215dp"
            android:layout_height="48dp"
            android:layout_centerHorizontal="true"
            android:background="@android:drawable/btn_dropdown"
            android:contentDescription="spinner"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.391"
            app:layout_constraintStart_toEndOf="@+id/textView6"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.061" />

        <ImageView
            android:id="@+id/alarm"
            android:layout_width="59dp"
            android:layout_height="67dp"
            android:layout_marginBottom="524dp"
            android:backgroundTint="#1A1A1A"
            android:contentDescription="alarmImage"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.045"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView6"
            app:layout_constraintVertical_bias="1.0"
            app:srcCompat="@drawable/baseline_add_alert_24"
            app:tint="#D4D4D4" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="106dp"
            android:layout_height="23dp"
            android:fontFamily="@font/dm_sans"
            android:padding="2dp"
            android:text="ALARM MODE"
            android:textColor="#D2D2D2"
            android:textSize="14sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.052"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.076" />

        <SeekBar
            android:id="@+id/seekBar2"
            android:layout_width="269dp"
            android:layout_height="30dp"
            android:backgroundTint="#1A1A1A"
            android:max="100"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.328"
            app:layout_constraintStart_toEndOf="@+id/alarm"
            app:layout_constraintTop_toBottomOf="@+id/spinner"
            app:layout_constraintVertical_bias="0.114" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/pauseBtn"
            android:layout_width="127dp"
            android:layout_height="53dp"
            android:layout_margin="10dp"
            android:backgroundTint="#D2D2D2"
            android:ems="10"
            android:fontFamily="@font/dm_sans"
            android:onClick="pause"
            android:padding="2dp"
            android:text="pause"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/playBtn"
            app:layout_constraintVertical_bias="0.0" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/playBtn"
            android:layout_width="127dp"
            android:layout_height="53dp"
            android:layout_margin="10dp"
            android:backgroundTint="#D2D2D2"
            android:ems="10"
            android:fontFamily="@font/dm_sans"
            android:onClick="play"
            android:padding="2dp"
            android:text="play"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/alarm"
            app:layout_constraintVertical_bias="0.123" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>